            const articleViewerDate = document.getElementById('article-viewer-date');
            const articleViewerAuthorPhoto = document.getElementById('article-viewer-author-photo');


            const showPage = (targetId) => {
                pageSections.forEach(section => section.classList.add('hidden'));
                const targetPage = document.querySelector(targetId);
                if (targetPage) targetPage.classList.remove('hidden');
                window.scrollTo(0, 0);
            };

            navLinks.forEach(link => {
                link.addEventListener('click', (e) => {
                    const href = link.getAttribute('href');
                    if (href.startsWith('#page-')) {
                        e.preventDefault();
                        showPage(href);
                    } else if (href === '#contact') {
                        e.preventDefault();
                        footer.scrollIntoView({ behavior: 'smooth' });
                    }
                });
            });

            const openArticle = (card) => {
                const categoryElement = card.querySelector('.article-category');
                const titleElement = card.querySelector('.article-title');
                const imageElement = card.querySelector('img');
                const contentElement = card.querySelector('.article-full-content');
                const authorElement = card.querySelector('.article-author');
                const dateElement = card.querySelector('.article-date');
                const authorImgElement = card.querySelector('.article-author-img');

                articleViewerCategory.textContent = categoryElement.textContent;
                articleViewerTitle.textContent = titleElement.textContent;
                articleViewerImage.src = imageElement.src;
                articleViewerImage.alt = imageElement.alt;
                
                if (authorElement && dateElement) {
                    articleViewerAuthor.textContent = authorElement.textContent;
                    articleViewerDate.textContent = "Published on " + dateElement.textContent;
                } else {
                    articleViewerAuthor.textContent = "Derawvibes Staff";
                    articleViewerDate.textContent = "Published recently";
                }
                
                if (authorImgElement && authorImgElement.textContent.trim() !== '') {
                    articleViewerAuthorPhoto.src = authorImgElement.textContent.trim();
                } else {
                    articleViewerAuthorPhoto.src = 'https://placehold.co/100x100/EFEFEF/AAAAAA?text=...';
                }
                
                if (contentElement) {
                    articleViewerContent.innerHTML = contentElement.innerHTML;
                } else {
                    articleViewerContent.innerHTML = "<p>Article content could not be loaded. Please try again later.</p>";
                }
                
                articleViewerCategory.className = categoryElement.className.replace('mb-2', '');
                
                articleViewer.classList.remove('hidden');
                articleViewer.scrollTo(0, 0);
                document.body.style.overflow = 'hidden';
            };

            const closeArticle = () => {
                articleViewer.classList.add('hidden');
                document.body.style.overflow = 'auto';
            };

            readMoreLinks.forEach(link => {
                link.addEventListener('click', (e) => {
                    e.preventDefault();
                    const articleCard = e.target.closest('.article-card');
                    if (articleCard) openArticle(articleCard);
                });
            });

            closeArticleBtn.addEventListener('click', closeArticle);

            newsletterForm.addEventListener('submit', (e) => {
                e.preventDefault();
                const button = e.target.querySelector('button');
                const originalText = button.textContent;
                
                button.textContent = 'Thank You!';
                button.disabled = true;
                button.classList.add('bg-green-600', 'hover:bg-green-700');
                button.classList.remove('bg-blue-600', 'hover:bg-blue-700');

                setTimeout(() => {
                    button.textContent = originalText;
                    button.disabled = false;
                    button.classList.remove('bg-green-600', 'hover:bg-green-700');
                    button.classList.add('bg-blue-600', 'hover:bg-blue-700');
                    newsletterForm.reset();
                }, 3000);
            });

            document.getElementById('current-year').textContent = new Date().getFullYear();

            // Show the home page by default
            showPage('#page-home');
        });
    </script>
</body>
</html>
